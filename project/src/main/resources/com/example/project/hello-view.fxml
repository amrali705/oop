        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
         <RadioButton layoutX="25.0" layoutY="39.0" mnemonicParsing="false" text="RadioButton">
            <toggleGroup>
               <ToggleGroup fx:id="a" />
            </toggleGroup>
         </RadioButton>
         <RadioButton layoutX="39.0" layoutY="75.0" mnemonicParsing="false" text="RadioButton" toggleGroup="$a" />
         <RadioButton layoutX="14.0" layoutY="122.0" mnemonicParsing="false" text="RadioButton" />
      </children>
   </AnchorPane>

    <Label fx:id="welcomeText" />
</VBox>
